\begin{BusinessRule}{RN-N5}{Persistencia de escuelas}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{0.1}
	\BRitem{Autor}{Victor Lozano Ortega}
	\BRitem{Estatus}{Edición}
	\item[Descripción:] Una escuela no puede ser eliminada si cuenta con un comité asociado a ella, para eliminar a la escuela primero se debe eliminar al comité asociado a la misma.
	\BRitem{Referenciado por}{\cdtIdRef{CUE 5}{Eliminar escuela}}
\end{BusinessRule}

